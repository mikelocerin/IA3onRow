<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar.Fullscreen"></style>
    <style name="titulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/titulo</item>
    </style>
    <style name="boton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minWidth">@dimen/anchominbot</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/altominbot</item>
        <item name="android:layout_margin">@dimen/margenbot</item>
        <item name="android:textSize">@dimen/textbot</item>

    </style>
    <style name="radio" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textradio</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:alpha">3</item>

    </style>
    <style name="casilla">
        <item name="android:layout_width">@dimen/casilla</item>
        <item name="android:layout_height">@dimen/casilla</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:src">@drawable/casilla</item>

    </style>

</resources>
